
<a href='/songs' class='pull-left'>back</a>
<div class="row">
	<div class="col-lg-5 col-md-5 col-sm-8 col-xs-9 bhoechie-tab-container">
		<div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 bhoechie-tab-menu">
			<div class="list-group">
				<a href="#" class="list-group-item active text-center">
					<h4 class="glyphicon glyphicon-info-sign"></h4><br/>Title
				</a>
				<a href="#" class="list-group-item text-center">
					<h4 class="glyphicon glyphicon-music"></h4><br/>Lyrics
				</a>
				<a href="#" class="list-group-item text-center">
					<h4 class="glyphicon glyphicon-time"></h4><br/>Duration
				</a>
				<a href="#" class="list-group-item text-center">
					<h4 class="glyphicon glyphicon-plus-sign"></h4><br/>Release Date
				</a> 
				<a href="#" class="list-group-item text-center">
					<h4 class="glyphicon glyphicon-cog"></h4><br/>Modify
				</a>              
			</div>
		</div>
		<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 bhoechie-tab">

			<div class="bhoechie-tab-content active">
				<center>
					<h1 class="glyphicon glyphicon-info-sign" style="font-size:14em;color:#55518a"></h1>
					<h2 style="margin-top: 0;color:#55518a"><%= @song.title %></h2>
				</center>
			</div>

			<div class="bhoechie-tab-content">
				<center>
					<h1 class="glyphicon glyphicon-music" style="font-size:12em;color:#55518a"></h1>
					<h2 style="margin-top: 0;color:#55518a"><%= @song.lyrics %></h2>
				</center>
			</div>
    

			<div class="bhoechie-tab-content">
				<center>
					<h1 class="glyphicon glyphicon-time" style="font-size:12em;color:#55518a"></h1>
					<h2 style="margin-top: 0;color:#55518a"><%= @song.length%60 %> minutes</h2>
				</center>
			</div>
			<div class="bhoechie-tab-content">
				<center>
					<h1 class="glyphicon glyphicon-plus-sign" style="font-size:12em;color:#55518a"></h1>
					<h2 style="margin-top: 0;color:#55518a"><%= @song.released_on.strftime("%e %B %Y") if @song.released_on %></h2>
				</center>
			</div>
			<div class="bhoechie-tab-content">
				<center>
					<h1 class="glyphicon glyphicon-cog" style="font-size:12em;color:#55518a"></h1>

					<h2>	 
						<form action='/songs/<%= @song.id %> ' method="post" accept-charset="utf-8">
							<input type="submit" name="delete" value="delete" id="delete" class="btn btn-link">
							<input type="hidden" name="_method" value="DELETE">
						</form>
					</h2>
					<h2 style="margin-top: 0;color:#55518a">
						<a class="btn btn-link" href="/songs/<%= @song.id %>/edit">edit</a>
					</h2>
				</center>
			</div>
		</div>
		
	</div>
</div>


