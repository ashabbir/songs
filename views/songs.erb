

<a href='/songs/new' class='pull-left'>add</a> 
<% if @songs.any? %>
<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th>#</th>
			<th>Title</th>
			<th>Lyrics</th>
			<th>Duration</th>
			<th>Released on</th>
		</tr>
	</thead>
	<tbody>
		<% @songs.each do |s| %>
		<tr>
			<td> <%= s.id %> </td>
			<td> <a href='/songs/<%= s.id %>'><%= s.title %></a>  </td>
			<td> <%= s.lyrics %> </td>
			<td> <%= s.length %> </td>
			<td> <%= s.released_on %> </td>
		</tr>
		<% end %>
	</tbody>
</table>
<% else %>
<p> no songs to display </p>
<% end %>
		 	
		
